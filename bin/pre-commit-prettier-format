#!/bin/bash
#
# Pre-commit hook for Prettier formatting - runs only on changed files
# Usage: ./bin/pre-commit-prettier-format file1.md file2.yaml ...
#
set -euo pipefail

# Exit early if no files provided
if [ $# -eq 0 ]; then
    echo "No files to format with Prettier"
    exit 0
fi

echo "‚ú® Running Prettier format on changed files..."
echo "Files: $*"

# Use the focused Prettier script for formatting
$(dirname "$0")/prettier-lint

# Check if any files were modified after formatting
MODIFIED_FILES=()
for file in "$@"; do
    if [ -f "$file" ] && ! git diff --name-only --exit-code "$file" >/dev/null 2>&1; then
        MODIFIED_FILES+=("$file")
    fi
done

if [ ${#MODIFIED_FILES[@]} -gt 0 ]; then
    echo "üìù The following files were formatted:"
    printf '%s\n' "${MODIFIED_FILES[@]}"
    echo "Please stage these changes and commit again."
    exit 1
fi

echo "‚úÖ Prettier formatting completed successfully!" 